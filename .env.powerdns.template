# PowerDNS Production Environment Configuration
# Copy this file to .env.powerdns and update with production values

# Database Configuration
PDNS_DB_NAME=powerdns
PDNS_DB_USER=powerdns
PDNS_DB_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD

# API Configuration
PDNS_API_KEY=CHANGE_ME_STRONG_API_KEY
PDNS_API_ALLOW_FROM=0.0.0.0/0,::/0

# DNS Zone Configuration
PDNS_DEFAULT_ZONE=managed.prism.local

# Performance Tuning
PDNS_RECEIVER_THREADS=4
PDNS_DISTRIBUTOR_THREADS=4
PDNS_CACHE_TTL=60

# Security Settings
PDNS_DISABLE_AXFR=yes
PDNS_LOG_LEVEL=4

# Monitoring
PDNS_METRICS_ENABLED=true
PDNS_HEALTH_CHECK_INTERVAL=10