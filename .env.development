# Development Environment Variables for Prism DNS
# Copy this file to .env.development and fill in the values

# Application Environment
PRISM_ENV=development
LOG_LEVEL=DEBUG

# Database Configuration (SQLite for development)
DB_NAME=prism_dev
DB_USER=prism
DB_PASSWORD=dev_password

# Server Configuration
PRISM_SERVER_HOST=0.0.0.0
PRISM_TCP_PORT=8080
PRISM_API_PORT=8081

# Security Configuration (weak passwords OK for dev)
SECRET_KEY=dev_secret_key_not_secure
JWT_SECRET=dev_jwt_secret

# DNS Configuration
DNS_REFRESH_INTERVAL=60
DNS_TIMEOUT=10

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=15

# SSL Configuration
SSL_ENABLED=false

# Docker Configuration
COMPOSE_PROJECT_NAME=prism-dns-dev
COMPOSE_FILE=docker-compose.yml

# Development Features
HOT_RELOAD=true
DEBUG_MODE=true

# Email Settings
EMAIL_PROVIDER=console
EMAIL_CONSOLE_FORMAT=pretty
EMAIL_FROM_ADDRESS=dev@localhost.com
EMAIL_FROM_NAME="Prism DNS (Dev)"
APP_URL=http://localhost:8090
EMAIL_LOG_LEVEL=INFO
EMAIL_HIGHLIGHT_LINKS=true
EMAIL_USE_COLORS=auto
